<p id="notice"><%= notice %></p>

<h1>Authors</h1>


<% @authors.each do |author| %>
  <%= author.name %>
  <%= author.dob %>
  <%= author.biography %>
  <%= link_to 'Show', author %>
  <% if current_user.admin? %>
    <%= link_to 'Edit', edit_author_path(author) %>
    <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <br>
<% end %>
<br>

<%= link_to 'New Author', new_author_path %>
